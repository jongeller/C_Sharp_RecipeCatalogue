        Title="SearchBox" Height="306" Width="373">
    <Grid Margin="-16,-32,-22,-20" VerticalAlignment="Top" Height="328">
        <TextBox x:Name="searchTextBox" HorizontalAlignment="Left" Height="22" Margin="63,85,0,-33" TextWrapping="Wrap" VerticalAlignment="Top" Width="247"/>
